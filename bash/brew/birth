#! /bin/bash

# actual setup process for zsh
BIRTHDAYS_DIR="$DOTS/birthdays"
cd $BIRTHDAYS_DIR
source setup
cd -

# personal aliases
alias bd="birthdays date"
alias bn="birthdays name"
alias bl="birthdays list"
alias ba="birthdays add"
alias br="birthdays remove"
alias bu="cp $BIRTHDAYS_URL ~/.config/birthdays.json && echo \"birthdays updated successfully\""
