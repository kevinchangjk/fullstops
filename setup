#! /bin/zsh

# install exa and fd
sudo apt install -y exa fd-find
ln -s $(which fdfind) ~/.local/bin/fd
alias fd="fdfind"

# install fzf
git clone --depth 1 https://github.com/junegunn/fzf.git ~/.fzf
~/.fzf/install

# setup zshrc
echo "source ~/ripples/fullstops/zsh/zshrc" >> ~/.zshrc

# for vim configs
rm -rf $XDG_CONFIG_HOME/vim
source ./scripts/vimlink
